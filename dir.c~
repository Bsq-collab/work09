#include<stdio.h>
#include<unistd.h>
#include<sys/stat.h>
#include<fcntl.h>
#include<errno.h>
#include<stdlib.h>
#include<time.h>
#include <dirent.h>

//List all the files in the directory
//specify which files are dirs
//show total size of all reg files
//scan current directory

int main(){
  DIR * directory = opendir(".");
  struct dirent * d=readdir(directory);
  if(directory==NULL){
    printf("directory is null...");
    return 0;
  }
  
  while(d){
    printf("printing list of all files..............\n");
    printf("%s\n"d->d_name); 
  }
  
  
}
